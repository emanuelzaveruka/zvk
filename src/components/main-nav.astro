---
import { Icon } from 'astro-icon/components';
import { NavLinks } from '../util/link/nav-links';


interface Props {
  class?: string;
}
---
<aside
  id="menu"
  class:list={[
    'fixed right-4 top-24 z-50 flex flex-col justify-center items-center gap-4 p-2 bg-neutral-900/95 backdrop-blur-md rounded-md border border-neutral-700 transition-transform duration-500',
    Astro.props.class
  ]}
>
  {
    NavLinks.map((navLink) => (
      <a
        href={navLink.href}
        title={navLink.title}
        class="group relative transition-all flex items-center justify-center p-2 rounded-md hover:bg-neutral-800 border border-transparent hover:border-neutral-600"
      >
        <Icon
          name={navLink.icon}
          class="transition-all !w-6 !h-6 group-hover:text-cream-light"
        />
        <span
          class="!text-sm !font-normal transition-all opacity-0 group-hover:opacity-100 absolute right-full ml-2 px-3 py-1 rounded bg-neutral-900 border border-neutral-600"
        >
          {navLink.label}
        </span>
      </a>
    ))
  }
</aside>

<script>
    import { initMenu } from '../util/time-menu.js';
    initMenu("menu");
</script>